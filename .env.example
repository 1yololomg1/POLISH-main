# POLISH Environment Variables Example
# Copy this file to .env and fill in your values

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api

# Stripe Configuration (for payments)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# File Size Limits
VITE_MAX_FILE_SIZE=104857600

# Feature Toggles (true/false)
VITE_FEATURE_EXPORT=true
VITE_FEATURE_CONVERSION=true
VITE_FEATURE_REPORTS=true
VITE_FEATURE_MULTI_WELL=true
VITE_FEATURE_ADVANCED_QC=true
VITE_FEATURE_GEOLOGICAL_ANALYSIS=true

# Payment System Toggle (true/false)
VITE_PAYMENT_SYSTEM_ENABLED=true